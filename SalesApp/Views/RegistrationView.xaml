<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalesApp.Views.RegistrationView"
             Title="Регистрация">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Логин" Text="{Binding Username}"/>
        <Entry Placeholder="Email" Keyboard="Email" Text="{Binding Email}"/>
        <Entry Placeholder="Пароль" IsPassword="True" Text="{Binding Password}"/>
        <Button Text="Зарегистрироваться" Command="{Binding RegisterCommand}"/>
    </VerticalStackLayout>
</ContentPage>